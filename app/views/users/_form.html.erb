<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :picture %>
    <%= f.input :bio %>
    <%= f.input :twitter %>
    <%= f.input :facebook %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
