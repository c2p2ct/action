<%= simple_form_for(@plan) do |f| %>


    <%= f.input :name , label: 'name', hint: 'Name please', placeholder: 'Plan name', required: true %>
    <%= f.input :description , label: 'description details', hint: 'description info', required: true %>
    <%= f.input :duration , label: 'duration details', hint: 'duration info', required: true %>
    <%= f.input :amazonlink , label: 'amazonlink details', hint: 'amazonlink info', required: true %>
    <%= f.input :picture , label: 'picture details', hint: 'picture info', required: true %>
    <%= f.button :submit %>


<% end %>
